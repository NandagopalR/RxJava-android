<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".DemoActivity"
	android:background="@android:color/white"
	>

	<EditText
		android:id="@+id/fragment_form_lambda_example_edittext"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:hint="@string/fragment_form_edittext_hint"
		/>

	<Switch
		android:id="@+id/fragment_form_lambda_example_switch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>

	<Button
		android:id="@+id/fragment_form_lambda_example_button"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/fragment_form_button_text"
		android:enabled="false"
		android:layout_marginBottom="@dimen/textview_height"
		/>

	<EditText
		android:id="@+id/fragment_form_rxandroid_example_edittext"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:hint="@string/fragment_form_edittext_hint"
		/>

	<Switch
		android:id="@+id/fragment_form_rxandroid_example_switch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>

	<Button
		android:id="@+id/fragment_form_rxandroid_example_button"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/fragment_form_button_text"
		android:enabled="false"
		android:layout_marginBottom="@dimen/textview_height"
		/>

</LinearLayout>